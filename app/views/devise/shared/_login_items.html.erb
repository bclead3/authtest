<%- if user_signed_in? %>
  <li><%= link_to "Sign out", destroy_session_path(resource_name), method: :delete %></li>
<%- else %>
  <li><%= link_to "Sign in", new_session_path(resource_name) %></li>

  <%- if devise_mapping.omniauthable? %>
    <%- User.omniauth_providers.each do |provider| %>
      <li><%= link_to "Sign in with #{provider.to_s.titleize}", user_omniauth_authorize_path(provider) %></li>
    <% end -%>
  <% end -%>
<% end -%>